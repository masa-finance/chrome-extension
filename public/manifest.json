{
   "name": "Masa Chrome Extension",
   "description": "Empowering users to monetize their browsing data and participate in quests and campaigns on the Masa zk-Data Network.",
   "version": "1.0",
   "manifest_version": 3,
   "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
   "permissions": [
     "activeTab",
     "scripting",
     "webNavigation",
     "storage"
   ],
   "host_permissions": [
     "<all_urls>"
   ],
   "background": {
     "service_worker": "background.js"
   },
   "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": ["metamask.js"],
        "matches": ["<all_urls>"]
      }
    ]
 }